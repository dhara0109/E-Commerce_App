<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <TextView
        android:id="@+id/nameDetails"
        android:layout_width="367dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#373b54"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flavorDetails"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="36dp"
        android:isScrollContainer="true"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/nameDetails"
        app:layout_constraintTop_toBottomOf="@+id/nameDetails" />

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="265dp"
        android:layout_height="169dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameDetails"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/cartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="56dp"
        android:text="Add To Cart"
        app:layout_constraintEnd_toEndOf="@+id/priceDetails"
        app:layout_constraintTop_toBottomOf="@+id/priceDetails" />

    <TextView
        android:id="@+id/priceDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/flavorDetails"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/flavorDetails"
        app:layout_constraintTop_toBottomOf="@+id/flavorDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>